<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Book"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/updateBookTitleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book Title"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/updateBookAuthorInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Author"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/updateBookDescInput"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Description"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/updateBookCoverUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link URL Gambar Cover (jpg/png)"
            android:inputType="textUri"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/updateBookContentUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link Isi Buku / Teks Lengkap"
            android:inputType="textUri"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="16dp"/>

        <Spinner
            android:id="@+id/updateBookCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@color/bg_white"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/updateBookButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update"
                android:textColor="@color/bg_white"
                android:textSize="18sp"
                android:backgroundTint="@color/primary_blue"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/deleteBookButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                android:textColor="@color/primary_blue"
                android:textSize="18sp"
                android:backgroundTint="@color/primary_blue_light"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
