<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Book"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/bookTitleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book Title"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/bookAuthorInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Author"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/bookDescInput"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Description"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/bookCoverUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link URL Gambar Cover (jpg/png)"
            android:inputType="textUri"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/bookContentUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Link Isi Buku / Teks Lengkap"
            android:inputType="textUri"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="16dp"/>

        <Spinner
            android:id="@+id/bookCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="@color/bg_white"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/addBookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Book"
            android:backgroundTint="@color/primary_blue"
            android:textColor="@color/bg_white"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>
