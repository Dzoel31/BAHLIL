<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:padding="24dp">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-24dp"
        android:layout_marginBottom="-24dp"
        android:layout_marginRight="-24dp"
        android:background="@color/surface_light"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/titleManajemenAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manajemen Akun"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/navigateToEditProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah (Foto &amp; Nama)"
            android:backgroundTint="@color/surface_light"
            android:textColor="@color/text_primary"
            android:gravity="start|center_vertical"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/navigateToChangePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah Kata Sandi"
            android:backgroundTint="@color/surface_light"
            android:textColor="@color/text_primary"
            android:gravity="start|center_vertical"
            android:drawableStart="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>

</RelativeLayout>