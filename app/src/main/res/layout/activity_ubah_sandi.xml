<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleUbahSandi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Kata Sandi"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/currentPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kata Sandi Saat Ini"
            android:inputType="textPassword"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/newPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kata Sandi Baru"
            android:inputType="textPassword"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/confirmPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Konfirmasi Kata Sandi Baru"
            android:inputType="textPassword"
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/accent_pink"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah Kata Sandi"
            android:backgroundTint="@color/primary_blue"
            android:textColor="@color/bg_white"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>